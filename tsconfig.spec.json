{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@debugmcp/shared": ["packages/shared/src"],
      "@debugmcp/shared/*": ["packages/shared/src/*"],
      "@debugmcp/adapter-mock": ["packages/adapter-mock/src"],
      "@debugmcp/adapter-mock/*": ["packages/adapter-mock/src/*"],
      "@debugmcp/adapter-python": ["packages/adapter-python/src"],
      "@debugmcp/adapter-python/*": ["packages/adapter-python/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
