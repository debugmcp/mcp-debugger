{
  "name": "mcp-debugger-monorepo",
  "private": true,
  "version": "0.15.0",
  "description": "Run-time step-through debugging for LLM agents - Monorepo root",
  "homepage": "https://github.com/debugmcp/mcp-debugger",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debugmcp/mcp-debugger.git"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/debugpy", "**/node-inspector"]
  },
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rimraf dist",
    "build": "npm run build:packages && tsc --build && npm run build:servercore && tsc src/index.ts src/server.ts --outDir dist --module NodeNext --moduleResolution NodeNext --esModuleInterop true --target ES2022 && tsc src/proxy/dap-proxy-entry.ts src/proxy/dap-proxy-worker.ts src/proxy/dap-proxy-core.ts src/proxy/dap-proxy-dependencies.ts src/proxy/dap-proxy-interfaces.ts src/proxy/dap-proxy-adapter-manager.ts src/proxy/dap-proxy-connection-manager.ts src/proxy/dap-proxy-message-parser.ts src/proxy/dap-proxy-request-tracker.ts src/proxy/dap-proxy.ts src/proxy/minimal-dap.ts src/proxy/index.ts src/proxy/proxy-config.ts src/proxy/proxy-manager.ts --outDir dist --module NodeNext --moduleResolution NodeNext --esModuleInterop true --target ES2022 && npm run postbuild",
    "build:shared": "npm run build -w @debugmcp/shared --if-present",
    "build:adapters": "npm run build -w @debugmcp/adapter-mock && npm run build -w @debugmcp/adapter-python",
    "build:packages": "npm run build -w @debugmcp/shared && npm run build -w @debugmcp/adapter-mock && npm run build -w @debugmcp/adapter-python",
    "build:servercore": "tsc -p tsconfig.json",
    "build:all": "npm run build --workspaces --if-present && npm run build",
    "build:clean": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "docker-build": "docker build . -t mcp-debugger:local",
    "pretest:docker": "node scripts/docker-build-if-needed.js",
    "test": "npm run build && npm run pretest:docker && vitest run",
    "posttest": "node scripts/cleanup-test-processes.js",
    "test:watch": "vitest watch",
    "posttest:watch": "node scripts/cleanup-test-processes.js",
    "test:unit": "vitest run tests/unit tests/core/unit tests/adapters/*/unit",
    "posttest:unit": "node scripts/cleanup-test-processes.js",
    "test:integration": "vitest run tests/core/integration tests/adapters/*/integration",
    "posttest:integration": "node scripts/cleanup-test-processes.js",
    "test:e2e": "npm run pretest:docker && vitest run tests/e2e",
    "pretest:e2e": "npm run build",
    "posttest:e2e": "node scripts/cleanup-test-processes.js",
    "test:no-python": "cross-env SKIP_PYTHON_TESTS=true npm test",
    "test:no-docker": "cross-env SKIP_DOCKER_TESTS=true npm test",
    "test:ci": "npm run test:no-docker",
    "test:ci-no-python": "npm run build && vitest run --exclude '**/e2e/**' --exclude '**/adapters/python/**'",
    "test:core": "vitest run tests/core",
    "posttest:core": "node scripts/cleanup-test-processes.js",
    "test:python": "vitest run tests/adapters/python",
    "posttest:python": "node scripts/cleanup-test-processes.js",
    "test:e2e:smoke": "vitest run tests/e2e/mcp-server-smoke*.test.ts",
    "test:e2e:container": "docker build --no-cache -t mcp-debugger:local . && vitest run tests/e2e/mcp-server-smoke-container.test.ts",
    "test:coverage": "npm run build && npm run pretest:docker && vitest run --coverage",
    "posttest:coverage": "node scripts/cleanup-test-processes.js && node analyze-coverage.js",
    "test:coverage:quiet": "vitest run --coverage --reporter=dot --silent",
    "posttest:coverage:quiet": "node scripts/cleanup-test-processes.js",
    "test:coverage:summary": "node tests/utils/test-coverage-summary.js",
    "test:coverage:analyze": "node analyze-coverage-detailed.js",
    "coverage:analyze": "npm run test:coverage && node analyze-coverage-detailed.js",
    "test:coverage:json": "npm run build && vitest run --coverage --reporter=json --outputFile=test-results.json",
    "posttest:coverage:json": "node scripts/cleanup-test-processes.js",
    "test:dot": "vitest run --reporter=dot",
    "posttest:dot": "node scripts/cleanup-test-processes.js",
    "test:json": "vitest run --reporter=json --outputFile=test-results.json",
    "posttest:json": "node scripts/cleanup-test-processes.js",
    "test:failures": "node tests/utils/show-failures.js",
    "test:summary": "node tests/utils/test-summary.js",
    "test:quiet": "vitest run --reporter=dot --silent",
    "posttest:quiet": "node scripts/cleanup-test-processes.js",
    "test:verbose": "vitest run --reporter=verbose",
    "posttest:verbose": "node scripts/cleanup-test-processes.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "check:personal-paths": "node scripts/check-personal-paths.cjs",
    "check:all-personal-paths": "node scripts/check-all-personal-paths.cjs",
    "postbuild": "node scripts/copy-proxy-files.cjs",
    "clean": "rimraf dist",
    "act:check": "scripts\\act-runner.cmd --version",
    "act:lint": "scripts\\act-runner.cmd -j lint",
    "act:test": "scripts\\act-runner.cmd -W .github/workflows/ci.yml -j build-and-test --matrix os:ubuntu-latest",
    "act:test:all": "scripts\\act-runner.cmd -j build-and-test",
    "act:full": "scripts\\act-runner.cmd",
    "act:list": "scripts\\act-runner.cmd -l",
    "act:debug": "scripts\\act-runner.cmd -j build-and-test --verbose"
  },
  "keywords": [
    "mcp",
    "dap",
    "debugger",
    "debugging",
    "llm",
    "ai-agent",
    "debugpy",
    "step-through",
    "python"
  ],
  "author": "debugmcp <debug@sycamore.llc>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/debugmcp/mcp-debugger/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-debugger": "./dist/index.js"
  },
  "dependencies": {
    "@debugmcp/shared": "^0.15.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/which": "^3.0.4",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "commander": "^11.1.0",
    "debug": "^4.3.4",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "lru-cache": "^11.1.0",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1",
    "which": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "optionalDependencies": {
    "@debugmcp/adapter-mock": "^0.15.0",
    "@debugmcp/adapter-python": "^0.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.29",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-istanbul": "^3.2.1",
    "@vscode/debugadapter-testsupport": "^1.68.0",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "fetch-mock": "^12.5.2",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.2.1"
  }
}
