{
  "mcpServers": {
    "mcp-debugger": {
      "type": "stdio",
      "command": "node",
      "args": [
        "tools/dev-proxy/dev-proxy.mjs"
      ]
    },
    "mcp-debugger-npx": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@debugmcp/mcp-debugger",
        "stdio"
      ]
    },
    "mcp-debugger-docker": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "${PWD}:/workspace",
        "mcp-debugger:local",
        "stdio"
      ]
    }
  }
}
